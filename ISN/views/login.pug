extends layout

block content
      .container-fluid.h-100
        .d-flex.justify-content-center.h-100
          .card
            .card-header
              h3 Iniciar Sessão
              .d-flex.justify-content-end.social_icon
            .card-body
              form(method='POST' action='/login')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-hashtag
                  input.form-control(type='text' id="loginNumber" name="numAluno" placeholder='Número de aluno')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-key
                  input.form-control(type='password' id='loginPassword' name='password' placeholder='Password')

                .row.align-items-center.remember
                  input(type='checkbox')
                  | Lembrar credenciais

                .form-group
                  input.btn.float-right.login_btn(type='submit' value='Login')

            .card-footer
              .d-flex.justify-content-center.links
                a.btn.login_btn(href="/register") Registar
              .d-flex.justify-content-center
                //a(href='#') Forgot your password?

block script
  script.
    bootstrapValidate('#loginNumber', 'required:Introduza o número de aluno.');
    bootstrapValidate('#loginPassword', 'required:Introduza a sua password.');

         

