extends layout

block content
      .container
        .d-flex.justify-content-center.h-100
          .card
            .card-header
              h3 Registo
              .d-flex.justify-content-end.social_icon
            .card-body
              form(method='POST' action='/reg' enctype='multipart/form-data')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-hashtag
                  input.form-control(type='text' id="numAluno" name="numAluno" placeholder='NÃºmero de aluno')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-user
                  input.form-control(type='text' id='nome' name='nome' placeholder='Nome')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-key
                  input.form-control(type='password' id='password' name='password' placeholder='Password')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-images
                  input.form-control(type='file' id='imagem' name='imagem' accept='image/*')

                .form-group
                  input.btn.float-right.login_btn(type='submit' value='Registar')

            .card-footer
              .d-flex.justify-content-center.links
                a.btn.login_btn(href="/login") Login
