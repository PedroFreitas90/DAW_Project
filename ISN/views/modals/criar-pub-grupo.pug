// Modal
#criarPublicacaoGrupoModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='criarPublicacaoGrupoModalLabel' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h5.modal-title
          img.image-cover.d-inline-block.align-right.rounded(src="/ficheiros/"+ utilizador.foto.name  height="50px" width="50px")
          strong  #{utilizador.nome}
        button.close(type='button' data-dismiss='modal' aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
              form(method='POST' action='/publicacoes' enctype='multipart/form-data' onsubmit="return validateFormPublicacaoGrupoModal()")
                
                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-heading
                  input.form-control(type='text' id="createPublicacaoGrupoTitulo" name="titulo" placeholder='Título publicação')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-align-justify
                  textarea.form-control(type='text' id="createPublicacaoGrupoTexto" name="texto" placeholder='Publicação...')

                .input-group.form-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-paperclip
                  input.form-control(type='file' id="createPublicacaoGrupoAnexos" name="ficheiro" multiple)


                input.form-control(type="hidden" name="grupo" value=grupo[0].id)

                .form-group
                  input.btn.float-right.login_btn(type='submit' value='Publicar')

script(src='/scripts/views/criar-publicacao-grupo-modal.js')